<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12.0" stylesheets="@../ExerciseViewer.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.saring.exerciseviewer.gui.panels.LapPanelController">
    <children>
        <Label styleClass="label-header" text="%pv.laps.recorded_laps.text"/>
        <TableView fx:id="tvLaps" prefWidth="400.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tcLap" prefWidth="60.0" text="%pv.laps.lap"/>
                <TableColumn fx:id="tcLapTime" prefWidth="90.0" text="%pv.laps.lap_time"/>
                <TableColumn fx:id="tcSplitTime" prefWidth="90.0" text="%pv.laps.split_time"/>
                <TableColumn fx:id="tcHeartrate" text="%pv.laps.heartrate"/>
                <TableColumn fx:id="tcAvgHeartrate" text="%pv.laps.avg_heartrate"/>
                <TableColumn fx:id="tcMaxHeartrate" text="%pv.laps.max_heartrate"/>
                <TableColumn fx:id="tcEndSpeed" prefWidth="110.0" text="%pv.laps.end_speed"/>
                <TableColumn fx:id="tcAvgSpeed" prefWidth="110.0" text="%pv.laps.avg_speed"/>
                <TableColumn fx:id="tcDistance" prefWidth="100.0" text="%pv.laps.distance"/>
                <TableColumn fx:id="tcCadence" prefWidth="110.0" text="%pv.laps.cadence"/>
                <TableColumn fx:id="tcAltitude" prefWidth="90.0" text="%pv.laps.altitude"/>
                <TableColumn fx:id="tcAscent" prefWidth="90.0" text="%pv.laps.ascent"/>
                <TableColumn fx:id="tcDescent" prefWidth="90.0" text="%pv.laps.descent"/>
                <TableColumn fx:id="tcAvgPower" prefWidth="100.0" text="%pv.laps.avgPower"/>
                <TableColumn fx:id="tcMaxPower" prefWidth="100.0" text="%pv.laps.maxPower"/>
                <TableColumn fx:id="tcNormalizedPower" prefWidth="100.0" text="%pv.laps.normalizedPower"/>
                <TableColumn fx:id="tcTemperature" prefWidth="90.0" text="%pv.laps.temperature"/>
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
    </padding>
</VBox>
